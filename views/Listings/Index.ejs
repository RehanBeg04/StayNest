<% layout("/Layout/boilerplate") -%> 
  <style>
     
     #filters{
      display:flex;
      flex-wrap: wrap;
      align-items: center;

     }
    .filter{
      text-align: center;
      margin:0 auto;
      margin-top:2rem;
      opacity: 0.7;

    }
    .filter a{
      color:black;
    }

    .filter:hover{
      opacity:1;
    }
    .filter p{
      font-size:0.8rem;
    }
    
  .tax-rate{
    display: none;
  }

 .tax-switch {
  border: 1px solid black;
  padding: .7rem;
  border-radius: .5rem;
  height: 2.3rem;
  display: flex;
  align-items: center;
  justify-content: center;
  width:50%;
  max-width: 11rem;
 margin-left: auto; 
 } 

 .tax-switch label{
    font-size:.9rem;
    font-weight: 700;
 }
 
</style>

  <div id="filters" class="overflow-auto flex-nowrap  px-2 py-2 d-md-flex "  style="scrollbar-width: none;">
  <div class="filter text-center me-3 ">
    <div><a href="/Listing/feature/Trending"><i class="fa-solid fa-fire"></i></a></div>
    <p>Trending</p>
  </div>
  <div class="filter text-center me-3">
    <div><a href="/Listing/feature/The Grand Horizon"><i class="fa-solid fa-hotel"></i></a></div>
    <p>The Grand Horizon</p>
  </div>
  <div class="filter text-center me-3">
    <div><a href="/Listing/feature/Castles"><i class="fa-solid fa-school"></i></a></div>
    <p>Castles</p>
  </div>
  <div class="filter text-center me-3">
    <div><a href="/Listing/feature/Mountain cities"><i class="fa-solid fa-mountain-city"></i></a></div>
    <p>Mountain cities</p>
  </div>
  <div class="filter text-center me-3">
    <div><a href="/Listing/feature/Beach"><i class="fa-solid fa-umbrella-beach"></i></a></div>
    <p>Beach</p>
  </div>
  <div class="filter text-center me-3">
    <div><a href="/Listing/feature/Amazing Pool"><i class="fa-solid fa-person-swimming"></i></a></div>
    <p>Amazing Pool</p>
  </div>
  <div class="filter text-center me-3">
    <div><a href="/Listing/feature/Camping"> <i class="fa-solid fa-tent"></i></a></div>
    <p>Camping</p>
  </div>
  <div class="filter text-center me-3">
    <div><a href="/Listing/feature/Farms"> <i class="fa-solid fa-cow"></i></a></div>
    <p>Farms</p>
  </div>
  <div class="filter text-center me-3">
    <div><a href="/Listing/feature/Arctic"><i class="fa-solid fa-snowflake"></i></a></div>
    <p>Arctic</p>
  </div>
  </div>
     <div class="tax-switch ">
   <div class="form-check-reverse form-switch " >
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display Taxes</label>
</div>
    </div>
    <div class="Container row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
       <% for(let list of Lists){%>
   <a href="/Listing/<%=list._id%>">
   <div class="card col listing-card" >
   <img src="<%=list.image.url%>" class="card-img-top" alt="<%=list.image.filename %>" style="height: 20rem;">
    <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text">
       <b> <%=list.title%></b><br>
      &#8377 <%=list.price.toLocaleString("en-IN")%>/night 
      <i class="tax-rate"> &nbsp; +18% GST </i>
    </p>
  </div>
</div>
</a>
  <% }%>
  </div>
<script>
 let taxswitch=document.querySelector("#switchCheckDefault");
 taxswitch.addEventListener("click",()=>{
  let taxrate=document.getElementsByClassName("tax-rate");
  for(rate of taxrate){
    if(rate.style.display!="inline"){
     rate.style.display="inline";
    }else{
        rate.style.display="none";
    }
  }
 })

</script>
    

